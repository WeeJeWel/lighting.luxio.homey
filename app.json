{
  "id": "lighting.luxio.homey",
  "sdk": 2,
  "brandColor": "#000000",
  "name": {
    "en": "Luxio"
  },
  "description": {
    "en": "Adds support for Luxio Wi-Fi LED Strips"
  },
  "category": "lights",
  "version": "1.2.0",
  "compatibility": ">=2.5.0",
  "author": {
    "name": "Luxio Lighting",
    "email": "info@luxio.lighting"
  },
  "images": {
    "large": "/assets/images/large.jpg",
    "small": "/assets/images/small.jpg"
  },
  "flow": {
    "actions": [
      {
        "id": "set_effect",
        "title": {
          "en": "Set an Effect",
          "nl": "Start een Effect"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=luxio"
          },
          {
            "type": "dropdown",
            "name": "effect",
            "values": [
              {
                "id": "rainbow",
                "label": {
                  "en": "Rainbow"
                }
              },
              {
                "id": "colorcycle",
                "label": {
                  "en": "Color Cycle"
                }
              },
              {
                "id": "knightrider",
                "label": {
                  "en": "Knight Rider"
                }
              }
            ]
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "class": "light",
      "images": {
        "large": "/drivers/luxio/assets/images/large.jpg",
        "small": "/drivers/luxio/assets/images/small.jpg"
      },
      "capabilities": [
        "onoff",
        "dim",
        "light_hue",
        "light_saturation",
        "light_temperature",
        "light_mode",
        "luxio_gradient",
        "luxio_effect"
      ],
      "name": {
        "en": "Luxio"
      },
      "discovery": "luxio",
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "id": "luxio"
    }
  ],
  "capabilities": {
    "luxio_effect": {
      "type": "enum",
      "title": {
        "en": "Effect"
      },
      "getable": true,
      "setable": true,
      "values": [
        {
          "id": "rainbow",
          "title": {
            "en": "Rainbow"
          }
        },
        {
          "id": "colorcycle",
          "title": {
            "en": "Color Cycle"
          }
        },
        {
          "id": "knightrider",
          "title": {
            "en": "Knight Rider"
          }
        }
      ]
    },
    "luxio_gradient": {
      "type": "string",
      "title": {
        "en": "Luxio Gradient"
      },
      "getable": true,
      "setable": true,
      "uiComponent": null
    }
  },
  "discovery": {
    "luxio": {
      "type": "mdns-sd",
      "mdns-sd": {
        "protocol": "tcp",
        "name": "luxio"
      },
      "id": "{{txt.id}}"
    }
  }
}